{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://careersbangladesh.com"
        }
      ]
    }
  ],

  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://careersbangladesh.com" }
  ],
  "public": true,
  "routes": [
    {
      "src": "/api/.*",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "headers": {
        "Access-Control-Allow-Origin": "https://careersbangladesh.com"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 10 * * *"
    }
  ]
}
