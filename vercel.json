{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://careersbangladesh.com"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "content-type"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://careersbangladesh.com"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 10 * * *"
    }
  ]
}
